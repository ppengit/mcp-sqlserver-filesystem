{
  "推荐使用方式 (uvx @latest)": {
    "description": "推荐使用方式：用户只需安装uv和ODBC Driver，无需本地安装",
    "config": {
      "mcpServers": {
        "mcp-sqlserver-filesystem": {
          "command": "uvx",
          "args": ["mcp-sqlserver-filesystem@latest"],
          "timeout": 600,
          "env": {
            "DB_SERVER": "localhost",
            "DB_DATABASE": "your_database",
            "DB_USE_WINDOWS_AUTH": "true",
            "DB_TRUST_SERVER_CERTIFICATE": "true",
            "DB_ENCRYPT": "false",
            "FS_ALLOWED_PATHS": "C:\\Users\\YourName\\Documents,D:\\Projects",
            "FS_ALLOWED_EXTENSIONS": ".txt,.md,.py,.json,.sql,.csv",
            "FS_IGNORE_FILE_LOCKS": "true"
          },
          "autoApprove": [
            "sql_query",
            "list_tables",
            "get_table_schema",
            "read_file",
            "write_file",
            "list_directory"
          ]
        }
      }
    }
  },

  "SQL Server认证 + 文件系统全访问": {
    "description": "使用SQL Server认证，文件系统全访问模式",
    "config": {
      "mcpServers": {
        "mcp-sqlserver-filesystem": {
          "command": "uvx",
          "args": ["mcp-sqlserver-filesystem@latest"],
          "timeout": 600,
          "env": {
            "DB_SERVER": "your-sql-server",
            "DB_DATABASE": "your_database",
            "DB_USE_WINDOWS_AUTH": "false",
            "DB_USERNAME": "sa",
            "DB_PASSWORD": "your_password",
            "DB_TRUST_SERVER_CERTIFICATE": "true",
            "FS_ALLOWED_PATHS": "*",
            "FS_ALLOWED_EXTENSIONS": "*.*",
            "FS_IGNORE_FILE_LOCKS": "true"
          },
          "autoApprove": [
            "sql_query",
            "list_tables",
            "get_table_schema",
            "read_file",
            "write_file",
            "list_directory"
          ]
        }
      }
    }
  },

  "安全限制模式": {
    "description": "生产环境安全配置，限制文件系统访问和SQL操作",
    "config": {
      "mcpServers": {
        "mcp-sqlserver-filesystem": {
          "command": "uvx",
          "args": ["mcp-sqlserver-filesystem@latest"],
          "timeout": 600,
          "env": {
            "DB_SERVER": "prod-server.company.com",
            "DB_DATABASE": "ProductionDB",
            "DB_USE_WINDOWS_AUTH": "false",
            "DB_USERNAME": "readonly_user",
            "DB_PASSWORD": "secure_password",
            "DB_TRUST_SERVER_CERTIFICATE": "false",
            "DB_ENCRYPT": "true",
            "FS_ALLOWED_PATHS": "C:\\Projects\\Safe,D:\\Data\\ReadOnly",
            "FS_ALLOWED_EXTENSIONS": ".txt,.log,.json,.csv",
            "FS_ENABLE_WRITE": "false",
            "FS_ENABLE_DELETE": "false",
            "SEC_ENABLE_SQL_PROTECTION": "true",
            "SEC_MAX_QUERY_LENGTH": "1000"
          },
          "autoApprove": [
            "sql_query",
            "list_tables",
            "get_table_schema",
            "read_file",
            "list_directory"
          ]
        }
      }
    }
  },

  "开发模式 (本地安装)": {
    "description": "本地开发使用，适用于已克隆项目的开发者",
    "config": {
      "mcpServers": {
        "mcp-sqlserver-filesystem": {
          "command": "python",
          "args": ["-m", "mcp_sqlserver_filesystem"],
          "cwd": "D:/Solution/mcp-sqlserver-filesystem",
          "timeout": 600,
          "env": {
            "PYTHONPATH": "D:/Solution/mcp-sqlserver-filesystem/src",
            "DB_SERVER": "localhost",
            "DB_DATABASE": "master",
            "DB_USE_WINDOWS_AUTH": "true",
            "FS_ALLOWED_PATHS": "*",
            "FS_ALLOWED_EXTENSIONS": "*.*",
            "MCP_DEBUG": "true"
          },
          "autoApprove": [
            "sql_query",
            "list_tables",
            "get_table_schema",
            "read_file",
            "write_file",
            "list_directory"
          ]
        }
      }
    }
  }
