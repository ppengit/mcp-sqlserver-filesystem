{
  "开发模式配置": {
    "description": "使用当前项目目录的开发模式配置",
    "config": {
      "mcpServers": {
        "mcp-sqlserver-filesystem": {
          "command": "python",
          "args": ["-m", "mcp_sqlserver_filesystem"],
          "cwd": "D:/Solution/jj-mcp",
          "timeout": 600,
          "env": {
            "PYTHONPATH": "D:/Solution/jj-mcp/src",
            "DB_SERVER": "localhost",
            "DB_DATABASE": "master",
            "DB_USE_WINDOWS_AUTH": "true",
            "DB_TRUST_SERVER_CERTIFICATE": "true",
            "DB_ENCRYPT": "false",
            "DB_MULTIPLE_ACTIVE_RESULT_SETS": "true",
            "MCP_DEBUG": "true",
            "MCP_WEB_HOST": "127.0.0.1",
            "MCP_WEB_PORT": "8765"
          },
          "autoApprove": [
            "sql_query",
            "list_tables",
            "get_table_schema",
            "read_file",
            "list_directory"
          ]
        }
      }
    }
  },
  
